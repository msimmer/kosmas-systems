$black: #000;
$white: #fff;
$red: #f00;


$font-size: 1rem;
$font-family: Helvetica Neue, Helvetica, Arial, sans-serif;;

$large-height: 80px;
$medium-height: $large-height / 2;
$small-height: $large-height / 4;

$large-width: 80px;
$medium-width: $large-width / 2;
$small-width: $large-width / 4;

$screen-small: "only screen and (max-width : 600px)";
$screen-large: "only screen and (min-width : 600px)";


$h-unit: 16px;
$v-unit: 16px;

* { box-sizing: border-box; }
html { font-size: 100%; }

body {
    margin: 0;
    padding: 0;
    font-family: $font-family;
    color: $black;
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;

    @media #{$screen-small} {
        padding-top: $medium-height;
    }
}


h1,h2,h3,h4,h5,h6,
.h1,.h2,.h3,.h4,.h5,.h6,
ul,ol,li,p,label,input,textarea,button {
    font-family: $font-family;
    font-size: $font-size;
    font-weight: 700;
    text-indent: 0;
    text-align: left;
}

select {
    font-family: $font-family;
    font-size: $font-size * .9;
    text-indent: 0;
    text-align: left;
    outline: none;
}

button {
    appearance: none;
    -webkit-appearance: none;
    background-color: transparent;
    border: 0;
    margin: 0;
    padding: 0;
    outline: none;
}

h1,h2,h3,h4,h5,h6,
.h1,.h2,.h3,.h4,.h5,.h6,
p,label {
    margin-top: 0;
    margin-top: 1rem;
}

label {
    display: block;
    span {
        display: block;
        padding-bottom: 0.3rem;
    }
}


a, a:link, a:visited, a:hover, a:active {
    color: $black;
    text-decoration: none;
    &.link--active { color: $black; }
}

.site {
    display: flex;
    flex-flow: column wrap;
    min-height: 100vh;
}


.site__header {
    h1 {
        margin-left: $small-width;
        margin-top: 0;
        margin-bottom: 0;
    }
    @media #{$screen-large} {
        h1 {
            font-size: 88px;
        }
    }
    @media #{$screen-small} {
        display: none;
    }
}

.article__header {
    h1 {
        margin-bottom: 0;
    }
    p {
        margin-top: 0;
    }
}

.purchase {}
.content {
    p {
        margin: 0;
        &:first-child {
            margin-top: 1rem;
        }
        &:last-child {
            margin-bottom: 1rem;
        }
    }
}

nav.nav__main {
    position: relative;
    z-index: 1;
    width: 300px;

    @media #{$screen-large} {
        h1 {
            display: none;
        }
    }

    @media #{$screen-small} {
        h1 {
            height: $medium-height + 10px;
            position: absolute;
            font-size: 28px;
            margin: 0 0 0 $small-width;
            display: flex;
            align-items: center;
        }
    }

    .nav__main__container {
        @media #{$screen-large} {
            width: 300px;
        }

        @media #{$screen-small} {
            height: calc(100vh - #{$medium-height});
            background-color: $white;
            margin: $medium-height + 10px 0 0;
            padding-bottom: $medium-height;
        }
    }

    .nav__main__container--fixed {
        @media #{$screen-large} {
            position: fixed;
            top: 0;
        }
    }

    .nav__title {
        margin-left: $small-width;
        @media #{$screen-small} {
            padding-top: $font-size;
            margin: 0 0 $font-size $small-width;
        }
    }

    ul.nav__list {
        list-style: none;
        margin: 0 $small-width 0;
        padding: 0;

        @media #{$screen-small} {
            margin: 0 $small-width 0;
        }


        li.nav__list__item {
            margin: 0;
            padding: 0 0 0.25rem 0;

            @media #{$screen-small} {
                display: block;
                height: $small-height;
            }

            a.nav__list__item__link {
                font-weight: bold;
                display: block;

                &:first-child {
                    padding-top: 0;
                }

                @media #{$screen-small} {
                    display: flex;
                    align-items: center;
                    height: $medium-height;
                    height: 100%;
                    width: 100%;
                    display: flex;
                    align-items: center;
                    white-space: nowrap;
                }

            }
        }
    }
}




nav.nav__main {
    @media #{$screen-small} {
        width: 100%;
        height: $medium-height + 10px;
        position: fixed;
        top: 0;
        background-color: $white;


        .nav__title + .nav__title {
            padding-top: 0;
        }

        .nav__main__container {
            display: none;
            overflow: auto;
            -webkit-overflow-scrolling: touch;
        }

        &.open {

            .nav__main__container {
                display: block;
            }

            ul.nav__list {
                padding: 0 $small-width;
            }

        } // open
    } // mq
}


button.nav__toggle {
    display: none;
    position: absolute;
    right: 0;
    height: $medium-height + 10px;
    width: $medium-width + 10px;
    z-index: 1;
    align-items: baseline;
    justify-content: center;
    border: 0;
    border-radius: 50%;
    font-size: 2rem;
    line-height: 0.3;
    background: transparent;
    transform-origin: 50% 50%;
    color: $black;

    &:active {
        background-color: grey;
    }

    transition: transform 0.2s ease-in;
    &.open {
        transform: rotate(45deg);
    }

    @media #{$screen-small} {
        display: flex;
    }

    .nav__indicator {
        position: absolute;
        top: -3px;
        left: 0;
        bottom: 3px;
        right: 0;
        display: flex;
        align-items: center;
        justify-content: center;


    }
}



main {
    flex: 1;
    display: flex;
    flex-flow: row wrap;
}

article {
    flex: 1;
    @media #{$screen-small} {
        padding: 0 $small-height;
    }
}

figure {
    margin: 0;
    img {
        max-width: 100%;
    }
}


figcaption {
    margin: 0 0 $font-size;
}

footer {
    border-top: 1px solid;
    display: flex;
    align-items: center;
    min-height: $large-height;
    @media #{$screen-small} {
        padding: 0 $small-height;
        min-height: $medium-height;
    }

    display: none;
}


.product__slider {
    @media #{$screen-small} {
        position: absolute;
        top: 0;
        height: 100vh;
        width: 100%;
    }
}
.product__slider__thumbnail {
    display: none;
    position: absolute;
    top: calc(15% + #{$large-height});
    left: 15%;
    bottom: 15%;
    right: 15%;
    background-size: contain;
    background-repeat: no-repeat;
    background-color: transparent;
    background-position: center center;
}




.product__grid {
    display: flex;
    flex: 1 0 calc(100% - 300px);
    align-items: center;
    justify-content: space-between;
    flex-direction: row;
    flex-wrap: wrap;
    padding-bottom: $v-unit;
}

.product__grid__thumbnail {
    display: flex;
    flex-direction: column;
    flex: 0 0 50%;
    position: relative;


    @media #{$screen-large} {
        padding: $v-unit 0 0 0;
    }

    @media #{$screen-small} {
        height: auto;
        flex: 1 0 100%;
    }

    .product__item__image {
        width: 100%;

        img {

            @media #{$screen-large} {

                max-height: calc(100vh - #{$large-height + $v-unit});
                max-width: calc(100% - #{$small-width});

                body.home & {
                    max-height: none;
                    max-width: calc(100% - #{$small-width});
                }
            }
            @media #{$screen-small} {
                max-height: 100%;
                max-width: 100%;
            }

            height: auto;
            width: 100%;
            object-fit: contain;
            object-position: left;

            body.home & {
                object-position: center;
            }

        }
    }
    .product__item__details {

        height: $large-height;

        flex: 1;
        @media #{$screen-small} {
            padding: 0 $h-unit $v-unit * 1.5;
        }
    }

    .product__item__title {
        margin-bottom: 0.25rem;
    }

    .product__item__sold-out {
        pointer-events: none;
        top: 0;
        left: 0;
        right: 0;
        bottom: 20%;
        position: absolute;
        display: flex;
        align-items: center;

        background: transparent asset_url('sold-out.png') no-repeat center;
        background-size: 25vw;

        @media #{$screen-small} {
            background-size: 70vw;
        }

    }

    &:nth-child(1),
    &:nth-child(2) {
        .product__item__sold-out {
            top: $v-unit / 2;
        }
    }
}


// product page
.gallery__entry {
    @media #{$screen-large} {
        img {
            max-height: calc(100vh - #{$large-height + $medium-height + $v-unit});
        }
    }
}
